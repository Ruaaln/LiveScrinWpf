<Window x:Class="LiveScreenServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Live Screen Server" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">
    <Grid>

        <!-- Başlıq -->
        <Border Background="#2D2D2D" Height="60" VerticalAlignment="Top">
            <TextBlock Text="Live Screen App"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"/>
        </Border>

        <!-- Məzmun -->
        <Grid Margin="0,70,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- IP və Port seçimi -->
            <StackPanel Orientation="Horizontal" Margin="20">
                <TextBlock Text="IP:" VerticalAlignment="Center" Foreground="White" FontSize="16"/>
                <TextBox x:Name="IpBox" Width="180" Height="28" Text="127.0.0.1" FontSize="14" Margin="5,0,10,0"/>
                <TextBlock Text="Port:" VerticalAlignment="Center" Foreground="White" FontSize="16"/>
                <TextBox x:Name="PortBox" Width="100" Height="28" Text="8080" FontSize="14" Margin="5,0,0,0"/>
            </StackPanel>

            <!-- Start / Stop düymələri -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20">
                <Button x:Name="BtnStart" 
                        Content="▶ Start Broadcast"
                        Width="160" Height="40"
                        Background="#007ACC"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnStart_Click"
                        Margin="0,0,10,0"/>

                <Button x:Name="BtnStop"
                        Content="■ Stop"
                        Width="100" Height="40"
                        Background="#AA0000"
                        Foreground="White"
                        FontWeight="Bold"
                        Visibility="Collapsed"
                        Click="BtnStop_Click"/>
            </StackPanel>

            <!-- Status -->
            <TextBlock x:Name="StatusText"
                       Grid.Row="2"
                       Margin="20 10"
                       Foreground="LightGray"
                       FontStyle="Italic"
                       Text="Server hazırdır..."/>

            <!-- Placeholder əlavə ayarlar üçün -->
            <Border Grid.Row="3" Margin="20" BorderBrush="#444" BorderThickness="1" CornerRadius="8">
                <TextBlock Text="(Əlavə Ayarlar üçün yer saxlanılıb)"
                           Foreground="#777"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="14"/>
            </Border>

        </Grid>
    </Grid>
</Window>
