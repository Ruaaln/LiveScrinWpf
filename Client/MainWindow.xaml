<Window x:Class="LiveClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Live Client" Height="450" Width="800"
        MinHeight="500"
        MinWidth="700"
        Background="#1E1E1E" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <Border Margin="10" BorderBrush="#444" BorderThickness="2" CornerRadius="8">
            <Image x:Name="ImageBox" Stretch="Uniform"/>
        </Border>

        <Grid Grid.Row="1" Background="#2D2D2D">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BtnStart"
                    Content="▶ Start"
                    Width="150"
                    Margin="10"
                    FontWeight="Bold"
                    Background="#007ACC"
                    Foreground="White"
                    Click="OnClick_Start"/>

            <Button x:Name="BtnStop"
                    Content="⏹ Stop"
                    Width="150"
                    Margin="10"
                    FontWeight="Bold"
                    Background="#CC0000"
                    Foreground="White"
                    Click="OnClick_Stop"
                    Visibility="Collapsed"/>

            <TextBox x:Name="EndPointBox"
                     Grid.Column="1"
                     VerticalAlignment="Center"
                     Margin="10"
                     FontSize="16"
                     Text="127.0.0.1:8080"/>
        </Grid>
    </Grid>
</Window>
